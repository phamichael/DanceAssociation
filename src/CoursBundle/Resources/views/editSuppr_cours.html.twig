{% extends "::layout.html.twig" %}

{% block rubrique %} : Modifier ou supprimer {{cours.id}} {% endblock %}

{% block body %}
	
		<div class="row">
			<div class="col-md-12">
				<h1>Modifier/Supprimer le cours {{cours.id}}</h1>
			</div>
		</div>		

		<!-- Suppression du cours -->
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<a id="btnSuppr" href="#" class="btn btn-block btn-danger"> Supprimer le cours </a>
				
				<div id="confirSuppr" hidden>
					<p>
						Etes-vous certain de vouloir supprimer ce cours ?
					</p>

					<form action="{{ path('cours_editsuppr', {'id': cours.id}) }}" method="POST" id="formSuppr">	
						<a id="btnAnnulerSuppr" href="#" class="btn btn-default">
							Ne pas supprimer
						</a>
						{# Ici j'ai écrit le bouton de soumission à la main #}	
						<input type="submit" value="Supprimer" class="btn btn-danger" />
						{# Ceci va générer le champ CSRF #}
						{{ form_rest(formSuppr) }}
					  </form>
				</div>
				
			</div>
		</div>
	
	
		<!-- Modification du cours -->
		<div class="row">
			<div class="col-md-offset-2 col-md-8 bordure">
				<h3>Modification des informations du cours </h3>
				{% include "CoursBundle:formAddEdit.html.twig" %}
			</div>
		</div>
	
	
		<!-- La fiche du cours -->
		<div class="row" style="margin-top:2em;">
			
			<div id="visualiser_fiche" class="centrer col-md-offset-2 col-md-8">
				<a class="btn btn-default btn-block" href="#">Visualiser la fiche du cours</a>
			</div>
			
			
			<div id="fiche" class="col-md-offset-2 col-md-8 ficheActivite" hidden>
				<h1 class="titreActiviteFiche">{{cours.id}}</h1>
				<span class="italique">Le {{ cours.jourCours }} de {{ cours.heureDebutCours|date('H:i:s') }} à {{ cours.heureFinCours|date('H:i:s') }} </span>
				<p>
					{{ cours.danse.descriptifDanse }}
				</p>

			</div>
		</div>	
		
		
{% endblock %}
