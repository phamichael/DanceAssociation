{% form_theme form 'bootstrap_3_layout.html.twig' %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	<div class="col-md-12">
		<!-- Les erreurs générales du formulaire. -->
		{{ form_errors(form) }}




	  <!-- Génération du label + error + widget pour un champ -->
		
		<div class="row">
			<div class="col-md-offset-1 col-md-2">
				{{ form_row(form.saison) }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-5">
				{{ form_row(form.danse) }}
				{{ form_row(form.niveauxDanse) }}
				{{ form_row(form.salle) }}
				{{ form_row(form.professeurAssociation) }}
			</div>
			<div class="col-md-offset-1 col-md-6">
				{{ form_row(form.jourCours) }}
				<div class="col-md-6" style="padding:0;">{{ form_row(form.heureDebutCours) }}</div>
				<div class="col-md-6">{{ form_row(form.heureFinCours) }}</div>
			</div>
		</div>
		

		<!-- Pour le bouton, pas de label ni d'erreur, on affiche juste le widget -->
		{{ form_widget(form.Confirmer, {'attr': {'class': 'btn btn-block btn-warning'}}) }}


	  <!-- Génération automatique des champs pas encore écrits.

		 Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)

		 et tous les champs cachés (type « hidden »). -->

	  {{ form_rest(form) }}

	
	</div>

	<!-- Fermeture de la balise <form> du formulaire HTML -->

	{{ form_end(form) }}
